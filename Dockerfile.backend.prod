FROM node:14

ENV IS_PROD=yes
ENV CLIENT_URL=https://innbyggerpanelet.dev.intern.nav.no
ENV API_URL=https://innbyggerpanelet-backend.dev.intern.nav.no
ENV BESKJED_TOPIC=min-side.aapen-brukernotifikasjon-beskjed-v1

WORKDIR /app

COPY . ./

RUN yarn install
RUN yarn build api

EXPOSE 3000

CMD node dist/apps/api/main.js